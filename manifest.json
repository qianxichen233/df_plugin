{
  "manifest_version": 3,
  "name": "Delicious Fruit 预览工具",
  "description": "悬停在游戏链接上能小窗口显示预览图和标签",
  "version": "1.0",
  "content_scripts": [
    {
      "js": ["main.js"],
      "css": ["preview.css"],
      "matches": [
        "https://delicious-fruit.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": "assets/icon128.png"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}